<article class="report">
  <button class="report__button" aria-label="More details" aria-expanded="false">
    <div class="report__button-icon" aria-hidden="true"></div>
  </button>
  <div class="report__cover">
    {{ image }}
  </div>
  <a class="report__details util-block-spacing" href="{{ url }}">
    <h3 class="report__title">
      {{ title }}
    </h3>
    <div class="report__subtitle">
      {{ subtitle }}
    </div>
    <div class="report__teaser">
      {{ teaser }}
    </div>
    <div class="report__date">
      {{ date }}
    </div>
    <div class="report__pagecount">
      {{ pagecount }}
    </div>
  </a>
</article>