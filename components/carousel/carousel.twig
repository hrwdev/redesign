<section class="carousel splide" id="{{ id }}" data-splide='{{ options }}' aria-labelledby="{{ id }}__title">
  <h2 class="carousel__title" id="{{ id }}__title">{{ title }}</h2>
  <div class="splide__track">
    <ul class="splide__list">
      {% for item in items %}
      <li class="splide__slide">{{ item }}</li>
      {% endfor %}
    </ul>
  </div>
  <div class="splide__arrows">
    {% include '@components/button/button.twig' with {
      class: "splide__arrow splide__arrow--prev",
      src: subdir ~ '/icons/CaretLeft.svg',
      label: 'Previous',
      show_label: false,
    } %}
    {% include '@components/button/button.twig' with {
      class: "splide__arrow splide__arrow--next",
      src: subdir ~ '/icons/CaretRight.svg',
      label: 'Next',
      show_label: false,
    } %}
    <ul class=" splide__pagination"></ul>
  </div>
</section>